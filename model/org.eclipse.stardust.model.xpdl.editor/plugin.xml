<plugin>

    <extension
    point = "org.eclipse.ui.newWizards">
    <category
      id = "org.eclipse.emf.ecore.Wizard.category.ID"
      name="%_UI_Wizard_category">
    </category>
    <wizard
      id = "org.eclipse.stardust.model.xpdl.edit.presentation.CarnotWorkflowModelModelWizardID"
      name = "%_UI_CarnotWorkflowModelModelWizard_label"
      class = "org.eclipse.stardust.model.xpdl.editor.presentation.CarnotWorkflowModelModelWizard"
      category = "org.eclipse.emf.ecore.Wizard.category.ID"
      icon = "icons/full/obj16/CarnotWorkflowModelModelFile.gif">
      <description>%_UI_CarnotWorkflowModelModelWizard_description</description>
      <selection class = "org.eclipse.core.resources.IResource" />
    </wizard>
  </extension>

  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "org.eclipse.stardust.model.xpdl.edit.presentation.CarnotWorkflowModelEditorID"
        name = "%_UI_CarnotWorkflowModelEditor_label"
        icon = "icons/full/obj16/CarnotWorkflowModelModelFile.gif"
        extensions = "cwm"
        class = "org.eclipse.stardust.model.xpdl.editor.presentation.CarnotWorkflowModelEditor" 
        contributorClass="org.eclipse.stardust.model.xpdl.editor.presentation.CarnotWorkflowModelActionBarContributor" >
    </editor>
  </extension>    
</plugin>
