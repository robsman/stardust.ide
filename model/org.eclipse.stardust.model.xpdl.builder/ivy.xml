<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.modeling.model" 
      module="org.eclipse.stardust.model.xpdl.builder"
      revision="${ipp.version.full}">
   </info>

   <configurations>
      <conf name="stardust-xpdl-builder-compile" description="XPDL Builder - Compile Scope" />
      
      <conf name="compile" extends="stardust-xpdl-builder-compile" visibility="private" description="Compile Time Dependencies" />
      
      <conf name="test" visibility="private" description="Test dependencies" />

      <conf name="pom" description="PDL Modeler - POMs" />
   </configurations>

   <publications>
      <artifact name="org.eclipse.stardust.model.xpdl.builder" type="jar" conf="stardust-xpdl-builder-compile" ext="jar" />
      <!-- artifact name="org.eclipse.stardust.model.xpdl.builder" type="pom" conf="pom" ext="pom" / -->
   </publications>

   <dependencies>      
      <!-- compile -->
      <dependency org="com.infinity.bpm" name="infinity-process-engine" rev="${ipp.version.full}" conf="stardust-xpdl-builder-compile->carnot-engine-compile" />
      <dependency org="com.infinity.bpm" name="ipp-bpm-model" rev="${ipp.version.full}" conf="stardust-xpdl-builder-compile->prereq-ipp-bpm-model"/>
      <dependency org="com.infinity.bpm" name="ipp-bpm-repository" rev="${ipp.version.full}" conf="stardust-xpdl-builder-compile->prereq-ipp-bpm-repository"/>
      
      <!-- TODO: use current versions! -->
      <dependency org="org.eclipse.emf" name="emf-ecore" rev="2.4.2" conf="stardust-xpdl-builder-compile->default"/>
      <dependency org="org.eclipse.emf" name="emf-ecore-xmi" rev="2.4.2" conf="stardust-xpdl-builder-compile->default"/>
      <dependency org="org.eclipse.emf" name="emf-ecore-change" rev="2.4.2" conf="stardust-xpdl-builder-compile->default"/>
      <dependency org="org.eclipse.xsd" name="xsd" rev="2.4.2" conf="stardust-xpdl-builder-compile->default"/>

      <!-- TODO: use current versions! -->
      <dependency org="org.eclipse" name="org-eclipse-osgi" rev="3.4.3" conf="stardust-xpdl-builder-compile->default"/>
      <dependency org="org.eclipse.core" name="org-eclipse-core-runtime" rev="3.4.0" conf="stardust-xpdl-builder-compile->default"/>
      <dependency org="org.eclipse.equinox" name="org-eclipse-equinox-common" rev="3.4.0" conf="stardust-xpdl-builder-compile->default"/>
      <dependency org="org.eclipse.equinox" name="org-eclipse-equinox-registry" rev="3.4.0" conf="stardust-xpdl-builder-compile->default"/>
      
      <dependency org="junit" name="junit" rev="4.10" conf="test->default"/>

   </dependencies>
</ivy-module>
