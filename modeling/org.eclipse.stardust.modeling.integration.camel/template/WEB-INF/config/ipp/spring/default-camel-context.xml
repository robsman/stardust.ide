<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="structuredDataTranslator"
		class="org.eclipse.stardust.engine.extensions.camel.util.converter.StructuredDataTranslator">
		<property name="forkingService" ref="carnotForkingService" />
	</bean>

	<bean id="documentDataConverter"
		class="org.eclipse.stardust.engine.extensions.camel.converter.DocumentDataConverter">
		<property name="fromEndpoint"
			value="org.eclipse.stardust.engine.api.runtime.FileEndpoint" />
		<property name="targetType" value="dmsDocument" />
	</bean>

	<bean id="sdtFileConverter"
		class="org.eclipse.stardust.engine.extensions.camel.converter.SDTFileConverter">
		<property name="fromEndpoint"
			value="org.eclipse.stardust.engine.api.runtime.FileEndpoint" />
		<property name="targetType" value="struct" />
		<property name="translator" ref="structuredDataTranslator" />
	</bean>

	<bean id="docListFileConverter"
		class="org.eclipse.stardust.engine.extensions.camel.converter.DocumentListFileConverter">
		<property name="fromEndpoint"
			value="org.eclipse.stardust.engine.api.runtime.FileEndpoint" />
		<property name="targetType" value="dmsDocumentList" />
		<property name="batchSize" value="2" />
	</bean>

	<bean id="required" class="org.apache.camel.spring.spi.SpringTransactionPolicy">
		<property name="transactionManager" ref="carnotTxManager" />
		<property name="propagationBehaviorName" value="PROPAGATION_REQUIRED" />
	</bean>

	<bean name="bpmTypeConverter"
		class="org.eclipse.stardust.engine.extensions.camel.converter.BpmTypeConverter" />

	<bean name="mapAppenderProcessor"
		class="org.eclipse.stardust.engine.extensions.camel.enricher.MapAppenderProcessor" />

   <bean id="sqlPrepareStatementStrategy"
      class="org.eclipse.stardust.engine.extensions.camel.sql.SqlPrepareStatementStrategy" />
      
	<camelContext id="defaultCamelContext" trace="true"
		xmlns="http://camel.apache.org/schema/spring">
	</camelContext>
</beans>