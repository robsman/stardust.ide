<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.stardust.modeling.core</groupId>
    <artifactId>modeling-core-parent</artifactId>
    <version>9.9.9-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>org.eclipse.stardust.modeling.repository.common</artifactId>

  <packaging>eclipse-plugin</packaging>

  <properties>
    <ipp-bpm-repository.artifactId>ipp-bpm-repository</ipp-bpm-repository.artifactId>
  </properties>
  
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>ant-compile</id>
            <configuration>
              <skip>true</skip>
            </configuration>
          </execution>
          <execution>
            <id>ant-package</id>
            <configuration>
              <target name="set-package-properties">
                <property name="build.lib" location="${project.build.directory}"/>
                <property name="maven.created.jar" location="${project.build.directory}/${project.build.finalName}.jar"/>
              </target>
            </configuration>
          </execution>
          <execution>
            <id>ant-install</id>
            <configuration>
              <target name="set-install-properties">
                <property name="ipp-bpm-repository.jar" location="${project.build.directory}/${project.build.finalName}.jar"/>
                <property name="ipp-bpm-repository.pom" location="${project.build.directory}/${ipp-bpm-repository.artifactId}.pom"/>
              </target>
            </configuration>
          </execution>
          <execution>
            <id>ant-deploy</id>
            <configuration>
              <target name="set-install-properties">
                <property name="ipp-bpm-repository.jar" location="${project.build.directory}/${project.build.finalName}.jar"/>
                <property name="ipp-bpm-repository.pom" location="${project.build.directory}/${ipp-bpm-repository.artifactId}.pom"/>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
