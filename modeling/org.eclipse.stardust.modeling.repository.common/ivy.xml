<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.modeling.core" module="ipp-bpm-repository" revision="${ipp.version.full}" />

   <configurations>
      <conf name="ipp-bpm-repository-runtime" description="Dependencies which should be written to POM - Runtime Scope" />
      <conf name="ipp-bpm-repository-sources" description="Modeling Repository Sources" />
      <conf name="pom" description="POM Artifact" />
   </configurations>

   <publications>
      <artifact name="ipp-bpm-repository" type="jar" conf="ipp-bpm-repository-runtime" ext="jar" />
      <artifact name="ipp-bpm-repository" type="source" conf="ipp-bpm-repository-sources" ext="jar" m:classifier="sources" />
      <artifact name="ipp-bpm-repository" type="pom" conf="pom" ext="pom" />
   </publications>

   <dependencies>
      <!-- The following Eclipse dependencies are part of Eclipse 3.6.2 -->
      <dependency org="org.eclipse.emf" name="org.eclipse.emf.common" rev="${org.eclipse.emf.common.version}" conf="ipp-bpm-repository-runtime->default"/>
      <dependency org="org.eclipse.emf" name="org.eclipse.emf.ecore" rev="${org.eclipse.emf.ecore.version}" conf="ipp-bpm-repository-runtime->default">
         <exclude org="org.eclipse.emf" module="org.eclipse.emf.common"/>
      </dependency>
      <dependency org="org.eclipse.emf" name="org.eclipse.emf.ecore.xmi" rev="${org.eclipse.emf.ecore.xmi.version}" conf="ipp-bpm-repository-runtime->default">
         <exclude org="org.eclipse.emf" module="org.eclipse.emf.ecore"/>
      </dependency>
      <dependency org="org.eclipse.xsd" name="org.eclipse.xsd" rev="${org.eclipse.xsd.version}" conf="ipp-bpm-repository-runtime->default"/>
   </dependencies>
</ivy-module>
